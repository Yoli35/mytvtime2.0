<div class="card">
    {% set url = path('app_series_show', {'id': series.id, 'slug': series.slug }) %}
    <a href="{{ url }}">
        <div class="poster">
            {% if series.poster_path is defined %}
                {% if series.poster_path %}
                    <img src="/series/posters{{ series.poster_path }}" alt="{{ series.name }}">
                {% else %}
                    <div>{{ 'No poster'|trans }}</div>
                {% endif %}
            {% endif %}
            {% if series.watch_links|length %}
                <div class="watch-links">
                    {% for watch_link in series.watch_links %}
                        {% if watch_link.logo_path %}
                            <div class="provider" data-title="{{ watch_link.link_name }}">
                                <img src="{{ watch_link.logo_path }}" alt="{{ watch_link.provider_name }}">
                            </div>
                        {% else %}
                            <div class="provider-name">
                                {{ watch_link.link_name }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="series-infos">
                <div class="air-date" data-title="{{ 'Episode air date'|trans }}">{{ series.final_air_date|format_date('relative_full')|capitalize }}</div>
            </div>
        </div>
        <div class="name">
            {{ series.name }}
        </div>
    </a>
</div>