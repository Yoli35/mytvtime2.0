<div class="series-tools-container" data-id="{{ seriesId }}" data-name="{{ seriesName|e('html_attr') }}">
    <div class="series-tools">{{ ux_icon('mdi:ellipsis-vertical') }}</div>
    <ul class="series-tools-menu">
        <li class="bookmark">{{ ux_icon('mdi:bookmark') }}<span>{{ 'Add to a list'|trans }}</span></li>
        <li class="favorite">{{ ux_icon('mdi:favorite') }}<span>{{ 'Mark as favorite'|trans }}</span></li>
        <li class="share">{{ ux_icon('mdi:share-outline') }}<span>{{ 'Share'|trans }}</span></li>
    </ul>
</div>