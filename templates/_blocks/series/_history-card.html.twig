<div class="card">
    <a href="{{ path('app_series_show', {'id': series.id, 'slug': series.localizeSlug ?? series.slug }) }}">
        <div class="poster">
            {% if series.posterPath %}
                <img src="{{ series.posterPath }}" alt="{{ series.name }}"{% if series.date is defined %} data-title="{{ series.date }}{% endif %}">
            {% else %}
                <div>{{ 'No poster'|trans }}</div>
            {% endif %}
            {% if series.providerName %}
                <div class="providers">
                    <div class="provider-content">
                        <div class="provider">
                            <img src="{{ series.providerLogoPath }}" alt="{{ series.providerName }}">
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="progress">
                <div class="progress-bar" style="width: {{ series.progress }}%"></div>
            </div>
            <div class="episode-number">
                {{ 'S%02dE%02d'|format(series.seasonNumber, series.episodeNumber) }}
            </div>
            {% if series.favorite %}
                <div class="favorite">
                    <i class="fas fa-heart"></i>
                </div>
            {% endif %}
        </div>
        {% if series.localizedName %}
            <div class="name">{{ series.localizedName }}</div>
        {% else %}
            <div class="name">{{ series.name }}</div>
        {% endif %}
    </a>
</div>