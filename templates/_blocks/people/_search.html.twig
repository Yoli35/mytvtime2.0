    <form id="cast-search-form" action="javascript:void(0);">
        <label for="character-name">
            <input type="text" id="character-name" data-type="person" class="character" spellcheck="false" autocomplete="off" placeholder="{{ 'Characterâ€˜s name'|trans }}">
        </label>
        <label for="cast-search">
            <input type="search" id="cast-search" data-type="person" class="search" spellcheck="false" autocomplete="off" placeholder="{{ 'Search for a personâ€¦'|trans }}">
        </label>
        <input type="hidden" id="cast-search-series-id" value="{{ seriesId }}">
