<div class="overview-form" popover id="overview-form-container">
    <form class="form" action="" id="overview-form">
        <div class="form-row">
            <div class="form-field">
                <label for="overview-source"><span>{{ 'Source'|trans }} <span class="required">*</span></span> <span class="error"></span>
                    <select name="source" id="overview-source">
                        <option value="">{{ 'Select a source'|trans }}</option>
                        {% for source in sources %}
                            <option value="{{ source.id }}">{{ source.name }}</option>
                        {% endfor %}
                    </select>
                </label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-field">
                <label for="overview-field"><span>{{ 'Overview'|trans }} <span class="required">*</span></span> <span class="error"></span>
                    <textarea id="overview-field" rows="12" required></textarea>
                    <span class="error"></span>
                </label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-field">
                <button type="button">{{ 'Cancel'|trans }}</button>
                <button type="submit" value="add">{{ 'Add'|trans }}</button>
            </div>
        </div>
        <input type="hidden" name="tool" id="tool" value="">
    </form>
</div>