{% if styles|length %}
    <div class="map-style-list">
        <div class="thumbnails">
            {% for s in styles %}
                <div
                        class="thumbnail{% if loop.index0==2 %} selected{% endif %}"
                        data-style="{{ s.style }}"
                        data-title="{{ s.name }}"
                >
                    <div class="name">{{ s.name }}</div>
                    <img src="{{ s.local_path }}" alt="{{ s.name }}">
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
