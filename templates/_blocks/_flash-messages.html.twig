<div class="flash-messages">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message {{ label }}">
                {{ message|raw }}
                <div class="close">
                    {{ ux_icon('fa6-solid:xmark', {height: '16px', width: '16px'}) }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
