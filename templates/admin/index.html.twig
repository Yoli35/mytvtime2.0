{% extends 'base.html.twig' %}

{% block title %}my Tv Time â†’ {{ 'Admin'|trans }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin.scss') }}">
{% endblock %}

{% block body %}
    {% include('_blocks/_menu.html.twig') %}
    <div class="container-fluid">
        <div class="admin">
            <aside>
                <h2>{{ 'Admin'|trans }}</h2>
                <div class="admin__menu">
                    <a href="{{ path('admin_users') }}"{% if route starts with 'admin_index' or route == 'admin_users' %} class="active"{% endif %}>{{ 'Users'|trans }}</a>
                    {% if seriesLink is defined %}
                        <a href="{{ seriesLink|raw }}"{% if route starts with 'admin_series' %} class="active"{% endif %}>{{ 'Series'|trans }}</a>
                    {% else %}
                        <a href="{{ path('admin_series') }}"{% if route starts with 'admin_series' %} class="active"{% endif %}>{{ 'Series'|trans }}</a>
                    {% endif %}
                    <a href="{{ path('admin_movies') }}"{% if route starts with 'admin_movies' %} class="active"{% endif %}>{{ 'Movies'|trans }}</a>
                    <a href="{{ path('admin_providers') }}"{% if route starts with 'admin_providers' %} class="active"{% endif %}>{{ 'Providers'|trans }}</a>
                </div>
            </aside>
            <main>
                {{ include('_blocks/admin/_series-tools.html.twig') }}

                {% if route == 'admin_index' or route == 'admin_users' %}
                    {% include('_blocks/admin/_users.html.twig') %}
                {% endif %}
                {% if route == 'admin_series' %}
                    {% include('_blocks/admin/_series.html.twig') %}
                {% endif %}
                {% if route == 'admin_series_edit' %}
                    {% include('_blocks/admin/_series-edit.html.twig') %}
                {% endif %}
                {% if route == 'admin_series_search_by_id' %}
                    {% include('_blocks/admin/_series-detail.html.twig') %}
                {% endif %}
                {% if route == 'admin_series_search_by_name' %}
                    {% include('_blocks/admin/_series-list.html.twig') %}
                {% endif %}
                {% if route == 'admin_movies' %}
                    {% include('_blocks/admin/_movies.html.twig') %}
                {% endif %}
                {% if route == 'admin_providers' %}
                    {% include('_blocks/admin/_providers.html.twig') %}
                {% endif %}
                {% if route == 'admin_settings' %}
                    {% include('_blocks/admin/_settings.html.twig') %}
                {% endif %}
            </main>
        </div>
    </div>
{% endblock %}
