{% extends 'base.html.twig' %}

{% block title %}my Tv Time â†’ {{ 'Series'|trans }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/home.scss') }}">
    <link rel="stylesheet" href="{{ asset('styles/series.scss') }}">
{% endblock %}

{% block body %}
    {% include('_blocks/_menu.html.twig') %}
    <div class="container-fluid">
        {% if seriesOfTheDay|length %}
            <h2>{{ 'Series of the day'|trans }}</h2>
            <div class="series-group user">
                <div class="wrapper">
                    <div class="content">
                        {% for series in seriesOfTheDay %}
                            {{ include('_blocks/series/_card.html.twig') }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
        {% if episodesOfTheDay|length %}
            <h2>{{ 'Episodes of the day'|trans }}</h2>
            <div class="series-group user">
                <div class="wrapper">
                    <div class="content">
                        {% for series in episodesOfTheDay %}
                            {{ include('_blocks/series/_card.html.twig') }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
        {% if seriesOfTheWeek|length %}
            <h2>{{ 'Series of the next 7 days'|trans }} ({{ seriesOfTheWeek|length }})</h2>
            <div class="series-group user">
                <div class="wrapper">
                    <div class="content">
                        {% set date = "" %}
                        {% for series in seriesOfTheWeek %}
                            {% if date != series.date %}
                                <h3>{{ series.date|format_date('relative_full')|capitalize }}</h3>
                                {% set date = series.date %}
                            {% endif %}
                            {{ include('_blocks/series/_card.html.twig') }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
        <h2>{{ 'Series airing this week'|trans }} ({{ seriesList|length }})</h2>
        <div class="series-group user">
            <div class="wrapper">
                <div class="content">
                    {% for series in seriesList %}
                        {{ include('_blocks/series/_card.html.twig') }}
                    {% endfor %}
                </div>
            </div>
        </div>
        <h2>{{ 'Episode history'|trans }} ({{ episodeHistory|length }})</h2>
        <div class="series-group user">
            <div class="wrapper">
                <div class="content">
                    {% for series in episodeHistory %}
                        {{ include('_blocks/series/_episode-card.html.twig') }}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% include('_blocks/_footer.html.twig') %}
    </div>
{% endblock %}
