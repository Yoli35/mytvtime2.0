                "loading": "{{ 'Loading filming locations…'|trans }}",
                "poiToggler": "{{ 'Points of Interest toggle display'|trans }}"
            }
        }
    </div>
    <div class="svgs" style="display: none">
        {% for d in devices %}
            {{ ux_icon(d.svg, {id: 'device-'~d.id, height: '18px', width: '18px'}) }}
        {% endfor %}
        {{ ux_icon('mdi:plus', {id: 'plus', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:eye', {id: 'eye', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:arrow-up', {id: 'up', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:arrow-left', {id: 'left', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:checkbox-outline', {id: 'save', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:trash', {id: 'delete', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:close', {id: 'cancel', height: '18px', width: '18px'}) }}
        {{ ux_icon('mdi:location-favorite', {id: 'poi-toggler-svg'}) }}
        <div class="svg" id="svg-xmark">{{ ux_icon('mdi:close') }}</div>
    </div>
