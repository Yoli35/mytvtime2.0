{% extends 'base.html.twig' %}

{% block title %}my Tv Time → {{ 'Connect'|trans }}{% endblock %}

{% block body %}
    {% include('_blocks/_menu.html.twig') %}
    <div class="container-fluid">
        <div class="login">
            <form action="{{ path('app_login') }}" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="header">{{ 'Connect'|trans }}</div>
                <div class="body">
                    <label for="username">{{ 'Username'|trans }}
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    </label>
                    <label for="password">{{ 'Password'|trans }}
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </label>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {# See https://symfony.com/doc/current/security/remember_me.html #}
                    <div class="remember-me">
                        <label>
                            <input type="checkbox" switch name="_remember_me"><span>{{ 'Remember me'|trans }}</span>
                        </label>
                    </div>

                    <hr>

                    <div class="social-login">
                        <div class="social-login-title">{{ 'Other sign-in methods'|trans }}</div>
                        <p><small>{{ 'Available after you sign in: link Google / GitHub in your profile.'|trans }}</small></p>

                        <button type="button" class="btn btn-outline" disabled data-title="Disponible après connexion">
                            {{ 'Sign in with Google'|trans }}
                        </button>
                        <button type="button" class="btn btn-outline" disabled data-title="Disponible après connexion">
                            {{ 'Sign in with GitHub'|trans }}
                        </button>
{#                        <button type="button" class="btn btn-outline" disabled title="Disponible après connexion">#}
{#                            {{ 'Sign in with Apple'|trans }}#}
{#                        </button>#}
                    </div>
                </div>

                <div class="footer">
                    <button type="button"><a href="{{ path('app_home_index') }}">{{ 'Home'|trans }}</a></button>
                    <button type="button"><a href="{{ path('app_register') }}">{{ 'Register'|trans }}</a></button>
                    <button type="submit">{{ 'Sign in'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
    {% include('_blocks/_footer.html.twig') %}
{% endblock %}
